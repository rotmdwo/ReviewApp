        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name=".Restaurants.restaurant.WriteActivity" android:theme="@style/myDialog"></activity>
        <activity android:name=".Settings.ProfilePictureChangeActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".Login_SignUp.SignUpActivity" android:theme="@style/AppTheme"/>
